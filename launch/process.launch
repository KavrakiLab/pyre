<launch>

  <!-- Debug flag  -->
  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <arg name="dataset" default="/home/chamzask/Desktop/datasets/shelf_zero/" /> 
  <arg name="start" default="1"/> 
  <arg name="end" default="10"/> 

  <!-- Start the train node -->
  <node name="$(anon processor)" launch-prefix="$(arg launch_prefix)" pkg="pyre" type="process" output="screen"> 
      <param name="dataset" value="$(arg dataset)"/>
      <param name="start" value="$(arg start)"/>
      <param name="end" value="$(arg end)"/>
  </node>
  
</launch>
